            <div n="5" type="sthāna">

                <div n="3" type="adhyāya">

                    <anchor facs="00375.tif" n="188r"/>

                    <l xml:id="SS.5.3.5.1">tatra dṛṣṭi<pc> </pc>niśvāsa<pc> </pc>vikhā
                        divyāsarppāḥ </l>

                    <l xml:id="SS.5.3.5.2"> bhau<lb/>ma|mudoṣṭrāviṣāḥ </l>

                    <l xml:id="SS.5.3.5.3"> māryaraśvavonara<pc> </pc>makara<pc
                            > </pc>maḍūka<pc> </pc>pākamatsya<pc> </pc>godhā<pc
                            > </pc>saṃvūka<pc> </pc>pravalāka<pc
                            > </pc>gṛhagodhikā<pc> </pc>śvanuḥ<lb/>padāś ca kīṭā
                            <pc> </pc>naṣadaṃṣṭrāviṣāḥ</l>

                    <l xml:id="SS.5.3.5.4"> ciṭima<pc> </pc>picciṭāḥ
                            ka<cb/>ṣāyavāsika<pc> </pc>sarṣapaka<pc> </pc>toṭākā<pc
                            > </pc>kauḍinyā<pc> </pc>sakṣa<pc
                            > </pc>mūtra<lb/>purīṣārttava<pc> </pc>śukra<pc
                            > </pc>muṣa<pc> </pc>śaṃdaṃśaviṣāḥ|</l>

                    <l xml:id="SS.5.3.5.5"/>
                    <l xml:id="SS.5.3.5.6"/>
                    <l xml:id="SS.5.3.5.7"/>
                    <l xml:id="SS.5.3.5.8"/>


                    <l xml:id="SS.5.3.5.9"> citraśīrṣa<cb/>sarāva<pc
                            > </pc>kuṃbhī<pc> </pc>śava<pc> </pc>dārukāri<pc
                            > </pc>medaka<pc> </pc>sārivā<pc
                            > </pc>muṣasaṃ<lb/>daṃśa<pc> </pc>daṃṣṭrā<pc
                            > </pc>sparśa<pc> </pc>vamardita<pc> </pc>guda<pc
                        > </pc>purīṣaviṣāḥ|</l>

                    <l xml:id="SS.5.3.5.10"> viṣadū<cb/>ṣitā|sthi<pc
                            > </pc>sarppa<pc> </pc>kaṃṭaka<pc> </pc>caraṭī<pc
                            > </pc>matsyāsthi<pc> </pc>viṣāṇi</l>

                    <l xml:id="SS.5.3.5.11"> sa<lb/>kuṭīmatsya<pc
                            > </pc>raktarājī<pc> </pc>varakī<pc> </pc>matsyāḥ pittaviṣāḥ </l>

                    <l xml:id="SS.5.3.5.12"> śū<cb/><unclear>kāḍaṃ</unclear>
                            ḍonviṭiṃga<pc> </pc>varaṭī<pc> </pc>śatapādī<pc
                        > </pc>valabhiṣāṇi sa<lb/></l>

                    <l xml:id="SS.5.3.5.14"> viṣāpahai<lb n="6"/>ś cāpy agadaiḥ prakṣipya
                        vādyāni sarvāṇy anuvādayīta</l>

                    <!--  SS 14cd and 15ab absent in J -->

                    <l xml:id="SS.5.3.15"> vādyāsya śabdeta hi yāti nāśaṃ viṣāni voraṇy
                        api pāni ta<lb n="7"/>tra</l>

                    <l xml:id="SS.5.3.16"> dhūme nile vā viṣasaṃprayukte
                        <caesura/>
                         mṛgāḥ amārttāḥ prapataṃti bhūmau
                        <caesura/>
                         kāśapratiśyāyaśirorujaś ca
                        <caesura/>
                         bhavanti tī<lb/>vrān yatām athāśvā </l>
                    <l xml:id="SS.5.3.17"> lākṣāharidrātiviṣābhayā<unclear>bda</unclear>
                        <caesura/>
                         harenukailādalavakrakuṣṭāḥ
                        <caesura/>
                         priyaṃgavaś cāpy anile<lb/> nidhāya
                        <caesura/>
                         dhūmānilau tena biśodhayeta </l>
